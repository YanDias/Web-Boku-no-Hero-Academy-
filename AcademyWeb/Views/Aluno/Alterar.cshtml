@model Aluno
@{
    ViewData["Title"] = "Alterar";
}
    <center>
        <h2>Alterar Aluno</h2>
    </center>
<br />
    <form asp-action="Alterar" method="post">
        <fieldset>
            <legend>Cadastrar Id</legend>
            <div class="form-group">
                <label>AlunoId:</label>
                <input class="form-control"
                       type="text" readonly=""
                       asp-for="AlunoId" />
                <input type="hidden"
                       asp-for="AlunoId" />
            </div>

            <div class="form-group">
                <label>Nome:</label>
                <input type="text" class="form-control"
                       asp-for="Nome" />
                </div>
                <div class="form-group">
                    <label>Cpf:</label>
                    <input type="text" class="form-control"
                           asp-for="Cpf" />
                </div>

                <div class="form-group">
                    <label>Senha:</label>
                    <input type="text" class="form-control"
                           asp-for="Senha" />
                </div>
                <div class="form-group" id="Imagem">
                    <label>Imagem:</label><br />
                    <img src="~/Academyimagens/@Model.Imagem"
                         alt="@Model.Nome"
                         style="width:50px;height:50px" />
                    <input type="file"  name="fupImagem" />
                </div>

                <div class="form-group">
                    <label>Sobre:</label>
                    <input type="text" class="form-control"
                           asp-for="Sobre" />
                </div>
                <input type="submit" class="btn btn-success" value="Salvar" />
</fieldset>
    </form>