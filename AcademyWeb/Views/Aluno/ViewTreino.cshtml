@model List<dynamic>;

@{

}

<h2>Gerenciamento de Alunos</h2>
<a asp-action="Cadastrar" class="btn btn-info">Cadastrar Aluno</a>

@foreach (ListaTreino item in Model)
{   <center>
    <h3>@item.NomeLista</h3>
    </center>
}
<table class="table table-hover table-striped"
       style="margin-top:15px;margin-bottom:15px">

    <thead>
        <tr>
            <th></th>
            <th>CPF</th>
            <th>Imagem</th>
            <th>Criado em</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (dynamic item in Model)
        {
            <tr>
                <td>@item</td>
                <td>@item.</td>

                <td>
                    <img src="~/Academyimagens/@item"
                         alt="@item"
                         style="width:150px;height:120px" />
                </td>


                <td>@item</td>
                <td>
                    <a asp-action="Remover"
                       asp-route-id="@item"
                       class="btn btn-primary">
                        Remover
                    </a>
                </td>
                <td>
                    <a asp-action="Alterar"
                       asp-route-id="@item"
                       class="btn btn-danger">
                        Alterar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
