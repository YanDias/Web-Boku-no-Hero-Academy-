@model Aula
@{
    ViewData["Title"] = "Cadastrar";
}
    <center>
        <h2>Cadastrar Aula</h2>
    </center>
<form asp-action="Cadastrar" method="post"
      enctype="multipart/form-data">
    <fieldset>
        <legend>Cadastrar Aulas</legend>
        <div asp-validation-summary="ModelOnly"
             class="text-primary"></div>

        <div class="form-group" id="Tipo">
            <label asp-for="Tipo"></label>
            <input type="text" class="form-control"
                   asp-for="Tipo" />
            <span asp-validation-for="Tipo"
                  class="text-primary"></span>
        </div>
        <div class="form-group" id="Local">
            <label asp-for="Local"></label>
            <input type="text" class="form-control"
                   asp-for="Local" />
            <span asp-validation-for="Local"
                  class="text-primary"></span>
        </div>
        <div class="form-group" id="Horario">
            <label asp-for="Data"></label>
            <input type="date" class="form-control"
                   asp-for="Data" />
            <span asp-validation-for="Data"
                  class="text-primary"></span>
        </div>
        <div class="form-group" id="Vagas">
            <label asp-for="Vagas"></label>
            <input type="text" class="form-control"
                   asp-for="Vagas" />
            <span asp-validation-for="Vagas"
                  class="text-primary"></span>
        </div>
        <div class="form-group" id="Professores">
            <label>Professores</label>
            <select asp-items="@ViewBag.Professores"
                    class="form-control"
                    name="drpProfessores">
                <option> -- SELECIONE -- </option>
            </select>
        </div>



        <input type="submit"
               class="btn btn-success"
               value="Cadastrar" />
    </fieldset>
</form>