@model Avisos
@{
    ViewData["Title"] = "Cadastrar";
}
<center><h2>Cadastrar Avisos</h2></center>
<br /><br />
<form asp-action="Cadastrar" method="post"
      enctype="multipart/form-data">
    <fieldset>
        <legend>Cadastrar Aulas</legend>
        <div asp-validation-summary="ModelOnly"
             class="text-primary"></div>


        <div class="form-group" id="Tipo">
            <label asp-for="Tipo"></label>
            <input type="text" class="form-control"
                   asp-for="Tipo" />
            <span asp-validation-for="Tipo"
                  class="text-primary"></span>
        </div>

        <div class="form-group" id="Tipo">
            <label asp-for="Descricao"></label>
            <input type="text" class="form-control"
                   asp-for="Descricao" />
            <span asp-validation-for="Descricao"
                  class="text-primary"></span>
        </div>


        <input type="submit"
               class="btn btn-success"
               value="Cadastrar" />
    </fieldset>
</form>