@model IMCAlunos
@{
    ViewData["Title"] = "Cadastrar";
}
<center><h2>Cadastrar IMC</h2></center>
<br /><br />
<form asp-action="Cadastrar" method="post"
      enctype="multipart/form-data">
    <fieldset>
        <legend>Cadastrar Imc </legend>
        <div asp-validation-summary="ModelOnly"
             class="text-primary"></div>

        <div class="form-group" id="Alunos">
            <label>Alunos</label>
            <select asp-items="@ViewBag.Alunos"
                    class="form-control"
                    name="drpAlunos">
                <option> -- SELECIONE -- </option>
            </select>
        </div>

      
        <div class="form-group" id="Peso">
            <label asp-for="Peso">Peso (ex: 00,00 Kg)</label>
            <input type="text" class="form-control"
                   asp-for="Peso" />
            <span asp-validation-for="Peso"
                  class="text-primary"></span>
        </div>
        <div class="form-group" id="Altura">
            <label asp-for="Altura">Altura (ex: 0,00m)</label>
            <input type="text" class="form-control"
                   asp-for="Altura" />
            <span asp-validation-for="Altura"
                  class="text-primary"></span>
        </div>

        <input type="submit"
               class="btn btn-success"
               value="Cadastrar" />
    </fieldset>
</form>